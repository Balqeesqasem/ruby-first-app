<p id="notice"><%= notice %></p>



<table class="table table-striped">
  <thead class="table-success">
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @frinds.each do |frind| %>
      <tr>
        <td><%= frind.first_name %></td>
        <td><%= frind.last_name %></td>
        <td><%= frind.email %></td>
        <td><%= frind.phone %></td>
        <td><%= link_to 'Show', frind %></td>
        <td><%= link_to 'Edit', edit_frind_path(frind) %></td>
        <td><%= link_to 'Destroy', frind, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Frind', new_frind_path, class:"btn btn-secondary" %>
